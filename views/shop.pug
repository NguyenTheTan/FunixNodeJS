extends layouts/main-layout.pug

block styles


    link(rel="stylesheet", href="/css/product.css")



block content

    main
        if prods.length > 0
                .grid 
                    each product in prods
                        article.card.product-item

                            header.card__header 
                                h1.product__title #{product.title}
                            .card__image 
                                img(src="https://pngimg.com/uploads/book/book_PNG2111.png", alt="book")
                            .card__content 
                                h2.product__price $19.99
                                p.product__description A very interesting book about so many even more interesting thing! 
                            .card__actions
                                button.btn Add to Cart
        else 
            h1 No Products



